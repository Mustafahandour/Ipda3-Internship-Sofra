<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_cart_rv"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_24dp"
        android:textSize="@dimen/dim_24dp"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:text="@string/total_cost"/>
    <TextView
        android:id="@+id/fragment_cart_tv_t_cost"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_24dp"
        android:background="@drawable/shap_circle"
        android:textSize="@dimen/font_18sp"
        android:textColor="@color/purple"
        android:gravity="center"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="@dimen/dim_24dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_8dp">
        <Button
            android:id="@+id/fragment_cart_bt_confirm"
            android:layout_marginStart="@dimen/dim_40dp"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_bt_rectangle"/>
        <Button
            android:id="@+id/fragment_cart_bt_more"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginEnd="@dimen/dim_40dp"
            android:text="@string/more"
            android:textColor="@color/white"
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_bt_rectangle"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>
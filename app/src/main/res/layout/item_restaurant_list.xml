<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8dp">

    <RelativeLayout
        style="@style/margin_st_end"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shap_rect_list">

        <LinearLayout
            android:id="@+id/item_restaurant_list_ll"
            android:layout_width="230dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginStart="@dimen/dim_16dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_restaurant_list_tv_restaurant_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/font_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_restaurant_list_tv_restaurant_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_online_state"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/item_restaurant_list_rb_rate"
            android:layout_width="190dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_below="@+id/item_restaurant_list_ll"
            android:layout_marginStart="55dp"
            android:isIndicator="true"
            android:scaleX=".5"
            android:scaleY=".5"
            android:layout_marginTop="@dimen/dim_8dp" />
        <TextView
            android:id="@+id/item_restaurant_list_tv_mim_order"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_below="@+id/item_restaurant_list_rb_rate"
            android:layout_marginStart="55dp"
            android:layout_marginTop="@dimen/dim_8dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:id="@+id/item_restaurant_list_tv_del_cost"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_restaurant_list_tv_mim_order"
            android:layout_marginStart="55dp"
            android:layout_marginTop="@dimen/dim_8dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:background="@drawable/shap_circle"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_restaurant_list_ci_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/restaurant_image" />
    </RelativeLayout>

</RelativeLayout>



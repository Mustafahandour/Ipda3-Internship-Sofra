<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/dark_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_offer_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:gravity="center"
        android:textColor="@color/purple"
        android:textSize="@dimen/font_20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/dialog_add_offer_rl_image"
        android:layout_width="@dimen/album_dp_80"
        android:layout_height="@dimen/album_dp_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginEnd="@dimen/album_dp_4"
        android:background="@drawable/shap_circle"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dialog_add_offer_ci_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <EditText
        android:id="@+id/dialog_add_offer_et_offer_name"
        style="@style/margin_st_end"
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_32dp"
        android:background="@drawable/shap_circl_corner_rect"
        android:hint="@string/offer_name"
        android:lines="1"
        android:paddingStart="@dimen/dim_16dp" />

    <EditText
        android:id="@+id/dialog_add_offer_et_offer_des"
        style="@style/margin_st_end"
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_16dp"
        android:background="@drawable/shap_circl_corner_rect"
        android:hint="@string/offer_des"
        android:paddingStart="@dimen/dim_16dp" />
    <EditText
        android:id="@+id/dialog_add_offer_et_price"
        style="@style/margin_st_end"
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_16dp"
        android:inputType="number"
        android:background="@drawable/shap_circl_corner_rect"
        android:hint="@string/price"
        android:paddingStart="@dimen/dim_16dp" />
    <EditText
        android:id="@+id/dialog_add_offer_et_offer_price"
        style="@style/margin_st_end"
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:layout_marginTop="@dimen/dim_16dp"
        android:background="@drawable/shap_circl_corner_rect"
        android:hint="@string/offer_price"
        android:paddingStart="@dimen/dim_16dp" />


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/dim_4dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_50dp"
            android:gravity="center"
            android:text="@string/from"
            android:textColor="@color/purple"
            android:textSize="@dimen/font_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_add_offer_tv_date_from"
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_50dp"
            android:drawableEnd="@drawable/ic_calendar_alt_solid"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dim_4dp"
            android:paddingStart="@dimen/dim_4dp"
            android:textColor="@color/purple"
            />

        <TextView
            android:layout_marginStart="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/dim_4dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_50dp"
            android:gravity="center"
            android:text="@string/to"
            android:textColor="@color/purple"
            android:textSize="@dimen/font_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_add_offer_tv_date_to"
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_50dp"
            android:drawableEnd="@drawable/ic_calendar_alt_solid"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dim_4dp"
            android:paddingStart="@dimen/dim_4dp"
            android:textColor="@color/purple" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_add_offer_bt_add"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:background="@drawable/shap_bt_rectangle"
        android:text="@string/add"
        android:textColor="@color/white" />

</LinearLayout>
</ScrollView>
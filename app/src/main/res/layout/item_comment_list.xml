<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_120dp"
    android:background="@drawable/shap_rect_list"
    android:orientation="vertical"
    style="@style/margin_st_end"
    android:layout_marginTop="@dimen/dim_8dp">

    <TextView
        android:id="@+id/item_comment_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/dim_16dp" />


    <TextView
        android:id="@+id/item_comment_list_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_comment_list_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_50dp"
        android:layout_marginTop="@dimen/album_sp_16"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_16dp" />

    <ImageView
        android:id="@+id/item_comment_list_rate"
        android:layout_width="@dimen/dim_32dp"
        android:layout_height="@dimen/dim_32dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:background="@drawable/shap_circle" />

</RelativeLayout>
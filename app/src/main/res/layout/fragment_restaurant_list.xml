<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:id="@+id/home_fragment_ll_fram1"
            android:layout_marginTop="@dimen/dim_16dp"
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/shap_circl_rect_grey">

            <Spinner
                android:id="@+id/home_fragment_sp_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
          android:layout_marginTop="@dimen/dim_16dp"
            android:id="@+id/home_fragment_ll_fram"
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_toEndOf="@+id/home_fragment_ll_fram1"
           >

            <EditText
                android:paddingStart="@dimen/dim_16dp"
                android:paddingEnd="@dimen/dim_16dp"
                android:id="@+id/home_fragment_et_restaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shap_circl_rect_grey" />
        </LinearLayout>
    <ImageButton
        android:id="@+id/home_fragment_ib_search"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_width="@dimen/dim_40dp"
        android:layout_height="@dimen/dim_32dp"
        android:layout_toEndOf="@+id/home_fragment_ll_fram"
        android:src="@drawable/ic_search"
        android:background="@drawable/shap_circle"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_fragment_rv_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_fragment_ll_fram"
        android:layout_marginTop="@dimen/dim_16dp" />

</RelativeLayout>
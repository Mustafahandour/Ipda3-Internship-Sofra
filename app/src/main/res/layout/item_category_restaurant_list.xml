<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/margin_16dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/item_category_restaurant_ib_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_delete"
                style="@style/margin_st_end"/>
            <ImageButton
                android:id="@+id/item_category_restaurant_ib_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_edit_solid"/>

        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/item_category_restaurant_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_100dp"
    android:background="@drawable/shap_rect_list">
    <ImageView
        android:id="@+id/item_category_restaurant_iv_image"
        style="@style/margin_st_end"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/shap_bt_sq"
       />

        <TextView
            android:id="@+id/item_category_restaurant_tv_category"
            android:layout_centerVertical="true"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="@dimen/font_18sp"
            android:layout_toStartOf="@+id/item_category_restaurant_iv_image"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_50dp"/>




</RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
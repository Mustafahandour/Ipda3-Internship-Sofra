<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/fragment_restaurant_offers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_16dp"
        android:text="@string/category"
        android:textColor="@color/pink"
        android:textSize="@dimen/font_20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_restaurant_offer_rv_offers"
        android:layout_below="@id/fragment_restaurant_offers_title"
        android:layout_above="@id/fragment_restaurant_offers_bt_add_offers"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/fragment_restaurant_offers_bt_add_offers"
        style="@style/margin_st_end"
        android:layout_marginTop="@dimen/dim_8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_offers"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/shap_bt_rectangle"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_activity_up_im"
        android:layout_width="202dp"
        android:layout_height="232dp"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/splash_up_im" />

    <ImageView
        android:id="@+id/splash_activity_logo"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_above="@+id/splash_activity_view"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_splash_sofra_logo" />
    <View
        android:id="@+id/splash_activity_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:layout_centerInParent="true"/>
<LinearLayout
    android:layout_marginTop="@dimen/dim_16dp"
    android:layout_below="@+id/splash_activity_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/Splach_activity_bt_orderFood"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/shap_bt_rectangle"
        android:layout_marginTop="@dimen/dim_16dp"
        android:text="@string/order_food"
        android:textColor="@color/white"/>
    <Button
        android:layout_below="@id/Splach_activity_bt_orderFood"
        android:id="@+id/Splach_activity_bt_buyFood"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/shap_bt_rectangle"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:text="@string/sell_food"
        android:textColor="@color/white"/>
</LinearLayout>

    <ImageView
        android:layout_width="239dp"
        android:layout_height="237dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-90dp"
        android:layout_marginBottom="-90dp"
        android:src="@drawable/splash_down_im" />
</RelativeLayout>